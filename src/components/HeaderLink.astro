---
import type { HTMLAttributes } from 'astro/types';
import '../styles/index.css'

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href === pathname || href === pathname.replace(/\/$/, '');
---

<a href={href} class={`hover:text-gray-300 hover:scale-110 hover:border-b-4 hover:border-indigo-900 text-xl font-sanchez ${isActive ? "font-bold border-b-4 border-indigo-900 text-white" : 'text-white'}`} class={} class:list={[className, { active: isActive }]} {...props}>
	<slot/>
</a>