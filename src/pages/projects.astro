---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Layout from "../layouts/Layout.astro";

import { PROJECTS_ORIGINAL_SOUNDTRACKS } from "../consts";
import { PROJECTS_INDEPENDENT_WORKS } from "../consts";
import { ProjectCard } from "../components/ProjectCard";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION} restrictWidth={false}>
  <main
    class="relative w-full min-h-screen bg-[url(/img/starbreak.png)] bg-local bg-cover bg-center"
  >
    <div
      class="absolute inset-0 bg-gradient-to-b from-[#a3b3ff80] to-indigo-300 pointer-events-none"
    >
    </div>
    <section
      class="restrictWidthScreen flex flex-col gap-12 w-full pt-4 z-10 relative"
    >
      <div class="flex flex-col gap-4">
        <p class="text-2xl sm:text-4xl font-semibold text-indigo-950">
          Original Soundtracks
        </p>

        <div
          class="grid grid-cols-2 sm:grid-cols-3 3xl:grid-cols-4 gap-4 sm:gap-8"
        >
          {
            [
              ...PROJECTS_ORIGINAL_SOUNDTRACKS,
              ...PROJECTS_ORIGINAL_SOUNDTRACKS,
              ...PROJECTS_ORIGINAL_SOUNDTRACKS,
            ].map((p) => (
              <ProjectCard
                name={p.name}
                projectLink={p.projectLink}
                thumbnail={p.thumbnail}
                description={p.description}
                client:load
              />
            ))
          }
        </div>
      </div>

      <div class="flex flex-col gap-4">
        <p class="text-2xl sm:text-4xl font-semibold text-indigo-950">
          Independent Works
        </p>

        <div
          class="grid grid-cols-2 sm:grid-cols-3 3xl:grid-cols-4 gap-4 sm:gap-8"
        >
          {
            [
              ...PROJECTS_INDEPENDENT_WORKS,
              ...PROJECTS_INDEPENDENT_WORKS,
              ...PROJECTS_INDEPENDENT_WORKS,
            ].map((p) => (
              <ProjectCard
                name={p.name}
                projectLink={p.projectLink}
                thumbnail={p.thumbnail}
                description={p.description}
                client:load
              />
            ))
          }
        </div>
      </div>
    </section>
  </main>
</Layout>
