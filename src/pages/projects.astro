---
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import Layout from "../layouts/Layout.astro";

import { PROJECTS_ORIGINAL_SOUNDTRACKS } from "../consts";
import { PROJECTS_INDEPENDENT_WORKS } from "../consts";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout title={SITE_TITLE} description={SITE_DESCRIPTION} restrictWidth={true}>
  <section class="flex flex-col gap-8 w-full">
    <div class="flex flex-col gap-4">
      <p class="text-4xl font-semibold text-indigo-950">Original Soundtracks</p>

      <div class="grid grid-cols-3 gap-8">
        {PROJECTS_ORIGINAL_SOUNDTRACKS.map(p => <ProjectCard name={p.name} link={p.link}/>)}
      </div>
    </div>

    <div class="flex flex-col gap-4">
      <p class="text-4xl font-semibold text-indigo-950">Independent Works</p>

      <div class="grid grid-cols-3 gap-8">
        {PROJECTS_INDEPENDENT_WORKS.map(p => <ProjectCard name={p.name} link={p.link}/>)}
      </div>
    </div>
  </section>
</Layout>